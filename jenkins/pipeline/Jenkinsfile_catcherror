pipeline{
    agent any
    
        stages{
            stage('BUILD'){
                steps{
                  sh '''
                  #!/bin/bash
                  pwd
                  sleep 5
                  '''
            }
            }
            stage('TEST-WINDOWS'){
                steps{
                  /* here even build fails also  mark as success and make stageresult as failure means only this stage will get fail not the complete job 
                  and it will continue the execution */
                  catcherror(buildeResult: 'SUCCESS', stageResult: 'FAILURE'){
                  sh '''
                  #!/bin/bash
                  pwd
                  exit 1
                  ls -lrt
                  sleep 5
                  '''
            }
                }
            }
            stage('TEST-LINUX'){
                steps{
                  sh '''
                  #!/bin/bash
                  pwd
                  ls -lrt
                  sleep 5
                  '''
            }
            }
            stage('DEPLOY'){
                steps{
                sh 'sleep 5'
            }
            }
        }
}
